<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/background_undercard"
    android:orientation="vertical"
    android:paddingTop="10dip" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dip"
        android:paddingLeft="6dip"
        android:paddingRight="6dip" >

        <FrameLayout
             android:id="@+id/item_list_feed_layout_avatar"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/item_list_feed_avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/focus_image" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bglistitem_selector_session_select"
                android:duplicateParentState="true"
                android:scaleType="fitXY" />
        </FrameLayout>

        <TextView
            android:id="@+id/item_list_feed_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignTop="@+id/item_list_feed_layout_avatar"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/item_list_feed_layout_avatar"
            android:text="豆啦小哄哄"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/item_list_feed_time"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/item_list_feed_layout_avatar"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/item_list_feed_layout_avatar"
            android:text="2015-2-4"
            android:textColor="@color/gray" />

        <ImageView
            android:id="@+id/item_list_feed_user_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="2dp"
            android:background="@drawable/pointer" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/white" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/untitled"
                android:scaleType="fitXY" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_gravity="bottom|right|center"
                android:layout_marginBottom="2dp"
                android:gravity="center_vertical"
                android:paddingLeft="4dp"
                android:text="如果可以在这里来一泡，就好了"
                android:textSize="24px" />
        </FrameLayout>
    </RelativeLayout>

</LinearLayout>